#include <stdio.h>

char	*ft_strupcase(char *str)
{
	int i;

	i = 0;
	while(str[i] != '\0')
	{
		if (str[i] >= 'a' && str[i] <= 'z')
			str[i] = 'a' - 'A';
		i++;
	}
	return (str);
}

int main(void)
{
char nouilles[] = "jaime les nouilles")
	printf("%s",ft_strupcase(nouilles));
		   return (0);
}
